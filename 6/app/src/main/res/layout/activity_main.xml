<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- ImageView for MP's placeholder picture -->
    <ImageView
        android:id="@+id/mp_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="MP Image" />

    <!-- TextView for MP's Name -->
    <TextView
        android:id="@+id/mp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MP Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/mp_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- TextView for MP's Constituency -->
    <TextView
        android:id="@+id/mp_constituency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Constituency"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/mp_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Button for showing next random MP -->
    <Button
        android:id="@+id/next_mp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next MP"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/mp_constituency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
